<div class="bgc-white">
  <div class="container smooth">

    <!-- ポイント数 -->
    <h4>①ポイント数を決める</h4>
    <div class="panel panel-body bgc-default">
      <div class="btn-group btn-group-justified" role="group" id="parent-width">
        <div class="btn-group" role="group">
          <button type="button" class="btn btn-default btn-width btn-lg pt-select">500pt</button>
        </div>
        <div class="btn-group" role="group">
          <button type="button" class="btn btn-default btn-width btn-lg pt-select">1,000pt</button>
        </div>
        <div class="btn-group" role="group">
          <button type="button" class="btn btn-default btn-width btn-lg pt-select">2,000pt</button>
        </div>
      </div>
      <div class="btn-group btn-group-justified" role="group" id="parent-width-2">
        <div class="btn-group" role="group">
          <button type="button" class="btn btn-default btn-width btn-lg pt-select">3,000pt</button>
        </div>
        <div class="btn-group" role="group">
          <button type="button" class="btn btn-default btn-width btn-lg pt-select">5,000pt</button>
        </div>
        <div class="btn-group" role="group">
          <button type="button" class="btn btn-default btn-width btn-lg pt-select">10,000pt</button>
        </div>
      </div>
      <div id="margin-b-font-size">or</div>
      <div class="input-group width-100">
        <input type="number" class="form-control pt-select" id="width-40" min="500" max="50000" placeholder="自分で選ぶ">
        <div class="clear">&nbsp;</div>
        <p class="help-block">500〜50,000ptまで</p>
      </div>
    </div>


    <!-- 支払い方法 -->
    <h4>②支払い方法を決める</h4>
    <%= render partial: "common/payment"  %>

  </div>
</div>
